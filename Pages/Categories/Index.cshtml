@page
@model to_do.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Categories";
    Layout = "_Layout";
}

<div class="content-wrapper">
    <h1 class="text-center">Categories</h1>
    <p class="text-center">
        <a asp-page="Create" class="btn btn-primary">Create New Category</a>
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Expense[0].Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Expense[0].Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Expense[0].Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Expense[0].Category)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Expense) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Id)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <style>
        .content-wrapper {
            margin: 20px;
        }

        .text-center {
            text-align: center;
            margin-bottom: 20px;
        }

        .btn {
            margin: 5px;
        }

        .table {
            margin-top: 20px;
        }

        .thead-dark th {
            background-color: #000000;
            color: #007bff;;
        }
    </style>
}
