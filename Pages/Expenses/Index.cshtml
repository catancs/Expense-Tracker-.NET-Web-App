@page
@model to_do.Pages.Expenses.IndexModel

@{
    ViewData["Title"] = "Expenses";
    Layout = "_Layout";
}

<div class="expenses-bg expense-table">
    <div class="content-wrapper text-center">
        <h2 class="text-white">Expenses</h2>
        <a asp-page="Create" class="btn btn-success my-3">Add New Expense</a>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover table-dark">
                <thead class = "income-table">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Expense[0].Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Expense[0].Amount)</th>
                        <th>@Html.DisplayNameFor(model => model.Expense[0].Date)</th>
                        <th>@Html.DisplayNameFor(model => model.Expense[0].Category)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Expense) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Category.Id)</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary mx-1">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info mx-1">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }
        
        .text-center {
            padding: 15px;
        }
        .income-table thead th {
        background-color: #007bff; 
        color: white; 
    }

        .button-group a.btn {
            min-width: 200px;
            margin: 0 5px;
        }
    </style>
}
